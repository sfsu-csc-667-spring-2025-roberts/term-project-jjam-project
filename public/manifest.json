{
  "manifest_version": 3,
  "name": "Auto-Format AI",
  "version": "0.1.0",
  "description": "Cleans, structures, and formats text with AI. Supports emails, notes, comments, and code. Real-time preview, tone/context preservation, and multi-language support.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
